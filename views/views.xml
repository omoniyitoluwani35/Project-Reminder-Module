<odoo>
    <record id="view_project_form_reminder" model="ir.ui.view">
        <field name="name">project.project.form.reminder</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <group string="Reminder Settings" colspan="2">
                    <field name="reminder_frequency"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>